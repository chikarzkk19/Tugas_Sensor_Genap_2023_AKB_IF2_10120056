<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/aplikasi_explorefinder"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="@string/explorefinder_adalah_sebuah_aplikasi_mobile_yang_dirancang_untuk_membantu_pengguna_menemukan_tempat_tempat_menarik_di_sekitar_mereka_aplikasi_explorefinder_memungkinkan_pengguna_untuk_mencari_tempat_berdasarkan_kategori_tertentu_seperti_restoran_kafe_hotel_toko_objek_wisata_dan_masih_banyak_lagi_pengguna_dapat_mengakses_informasi_detail_tentang_setiap_tempat_seperti_alamat_nomor_telepon_jam_operasional_ulasan_pengguna_dan_foto_fitur_pencarian_yang_disediakan_juga_memungkinkan_pengguna_untuk_menyaring_hasil_berdasarkan_preferensi_mereka_seperti_jarak_harga_fasilitas_dan_kriteria_lainnya_explorefinder_juga_dapat_mengintegrasikan_dengan_aplikasi_pemetaan_dan_navigasi_lainnya_di_perangkat_pengguna_pengguna_dapat_langsung_meluncurkan_petunjuk_arah_ke_tempat_yang_dipilih_menggunakan_aplikasi_navigasi_pilihan_mereka_selain_itu_aplikasi_ini_juga_dapat_memberikan_rekomendasi_tempat_yang_sesuai_dengan_minat_dan_riwayat_pengguna_memberikan_fitur_sosial_untuk_berbagi_tempat_dengan_teman_teman_dan_memungkinkan_pengguna_menyimpan_tempat_favorit_mereka_untuk_akses_cepat_di_masa_mendatang"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:ignore="VisualLintLongText" />

    </LinearLayout>

</FrameLayout>
